{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noEmit": true,
    "removeComments": true,
    
    // "emitDecoratorMetadata": true,
    // "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "tsup.config.ts"]
}
